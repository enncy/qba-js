{
	"compilerOptions": {
		"outDir": "./lib",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "Node",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"incremental": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"exclude": ["tests/**/*.ts", "node_modules", "dist", "lib"]
}
